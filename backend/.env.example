# AIDP Configuration
# AIDP API base URL (confirm actual endpoint when credentials received)
AIDP_API_URL=https://api.aidp.store

# AIDP API authentication key (obtain from AIDP provider after GPU access approval)
# SECURITY: Never commit actual keys - use Railway environment variables in production
AIDP_API_KEY=your_api_key_here

# AIDP network identifier (mainnet/testnet)
AIDP_NETWORK_ID=mainnet

# GPU type for AIDP job submission (nvidia-rtx-4090, nvidia-rtx-3090, nvidia-a100, etc.)
AIDP_GPU_TYPE=nvidia-rtx-4090

# Maximum job duration in seconds (default: 1 hour)
AIDP_JOB_TIMEOUT=3600

# Status polling interval in seconds (default: 10s)
AIDP_POLLING_INTERVAL=10

# Render Provider Configuration
# Use mock AIDP client for local development (true/false)
# Default: true - uses MockAIDPProvider which wraps local Blender rendering
# Set to false when real AIDP credentials become available (see Story 1.6.1)
USE_MOCK_AIDP=true

# Application Configuration
# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=http://localhost:5173,https://proofrender.vercel.app

# Maximum file upload size in bytes (10MB default)
MAX_UPLOAD_SIZE=10485760

# Rate limiting: number of requests per window
RATE_LIMIT_REQUESTS=5

# Rate limiting: time window in seconds (1 hour default)
RATE_LIMIT_WINDOW=3600

# Storage Configuration
# Path for temporary file storage (use /app/storage for Railway)
STORAGE_PATH=/app/storage

# File time-to-live in hours before automatic cleanup
FILE_TTL_HOURS=24

# Blender Configuration
# Path to Blender executable (use /usr/bin/blender for Docker)
BLENDER_BINARY=/usr/bin/blender

# Render output resolution (width x height)
RENDER_RESOLUTION=1024x1024

# Cycles render samples (higher = better quality but slower)
RENDER_SAMPLES=128

# Maximum render time in seconds (5 minutes default)
RENDER_TIMEOUT=300
